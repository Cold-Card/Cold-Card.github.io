.gt-container .gt-comment-body {
    transition-property: color,background;
    transition-delay: 0s;
    transition-duration: 1s;
    transition-timing-function: ease-in-out;
    padding: 0px 3px !important;
}
//徽章
.shields {
    display: inline;
    margin: 6px 6px;
}
//脚注
