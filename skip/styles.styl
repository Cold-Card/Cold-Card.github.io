    transition-property: color,background;
    transition-delay: 0s;
    transition-duration: 1s;
    transition-timing-function: ease-in-out;
}
#at4-share, #at4-soc {
    box-shadow: 0 0 13px 3px rgba(0,0,0,0.5)
}
.atss .at-share-btn {
    &:hover {
        box-shadow: 0 0 13px 3px rgba(0,0,0,0.5)
    }
}
// 更好的侧边滚动条
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}
::-webkit-scrollbar-track {
    &:hover {
        background-color: rgba(0,0,0,.15);
    }
}
::-webkit-scrollbar-thumb {
    background-color: rgba(0,0,0,.2);
    &:hover {
        border-radius: 8px;
    }
}
// 主页文章添加阴影效果
.post-block {
    margin-top 50px
    margin-bottom: 50px;
    padding: 25px;
    -webkit-box-shadow: 0 0 13px 3px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0 0 13px 3px rgba(0, 0, 0, .5);
}


//置顶
.post-sticky-flag {
    color: #A596C6
}
//文章头部信息
.posts-expand .post-meta a {
    border-bottom: 2px dashed #7d7d7d;
    &:hover {
        font-weight: bold;
    }
}
//搜索
.search-active .search-popup {
    transition-property: color,background;
    transition-delay: 0s;
    transition-duration: 1s;
    transition-timing-function: ease-in-out;
    box-shadow: 0 0 13px 3px rgba(0, 0, 0, 0.5);
}
//搜索输入
.search-popup input.search-input {
    font-size: 16px;
    font-weight: bold;
    margin-top: 5px;
}
//搜索标题
.search-popup a.search-result-title {
    font-size: 15px;
    border-bottom: none;
    transition-property: font-size,color,background;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    &:hover {
        font-size: 16px;
    }
}
//搜索关键字高亮
.search-popup .search-keyword {
    font-weight: bold;
    border: 2px dashed #cb78ff00;
    border-bottom: 2px dashed #cb78ff;
    color: #cb78ff;
    transition-property: border,padding,color,background;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    &:hover {
        border: 2px dashed #cb78ff;
        padding: 0px 2px;
    }
}
// 文章超链接样式
.post-body p a {
    border-bottom: none;
    &:hover {
        font-weight: bold;
        border-bottom: 2px solid #696969;
    }
}
//全站超链接
a {
    border-bottom: none;
}
// 全文按钮样式
.post-button .btn {
    padding: 0px 16px;
    transition-duration: 0.3s;
    transition-delay: 0s;
    transition-timing-function: ease-in-out;
    border-radius: 3px;
    transition-property: border,font-weight,padding,color,background;
    &:hover {
        padding: 3px 23px;
        font-weight: bold;
        border: 3px dashed;
    }
}
//归档
.posts-collapse .post-header {
    border-bottom: none;
    font-size: 15px;
    transition-property: font-size,margin,color,background;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    &:hover {
        font-weight: bold;
        font-size: 1.6em;
        margin-right: -40px;
    }
}
//评论
.comments {
    margin-top 50px;
    margin-bottom: 50px;
    padding: 25px;
    box-shadow: 0 0 13px 3px rgba(0, 0, 0, 0.5);
}
//评论按钮
.comment-button-group .comment-button {
    border: none;
    padding: 0px 5px;
    border-radius: 3px;
    transition-property: font-weight,padding,border,color,background;
    transition-duration: 0.3s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    &:hover {
        border: 2px dashed #737373;
        background: #737373;
        padding: 0px 15px;
        font-weight: bold;
    }
}
.comment-button-group .comment-button.active {
    font-weight: bold;
    border: none;
    background: #737373;
    &:hover {
        padding: 0px 5px;
    }
}
// 菜单超链接样式
.menu .menu-item a {
    padding: 3px 5px;
    transition-property: padding,color,background;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    &:hover {
        padding: 3px 10px;
        font-weight: bold;
    }
}
// 站点子标题
.site-subtitle {
    margin-top: 20px;
    margin-bottom: 20px;
}
// 站点名背景
.brand{
    transition-property: padding,font-size,color,background;
    transition-delay: 0s;
    transition-duration: 0.3s;
    transition-timing-function: ease-in-out;
    box-shadow: 0 0 13px 3px rgba(0, 0, 0, 0.5);
    &:hover {
        font-size: 1.5em;
        padding: 10px 50px;
        box-shadow: inset 0px 0 13px 3px rgba(0,0,0,0.5)
    }
}
//版权声明
.post-copyright {
    transition-property: color,background;
    transition-delay: 0s;
    transition-duration: 1s;
    transition-timing-function: ease-in-out;
    margin: 20px 0px;
}
.post-copyright a {
    border-bottom 1px dashed;
    &:hover {
        font-weight: bold;
        border-bottom 2px dashed;
    }
}
// 文章底部的tags
.posts-expand .post-tags a {
    border-bottom: none;
    padding: 0px 5px;
    border-radius: 3px;
    transition-property: padding,font-weight,color,background;
    transition-duration: 0.3s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    &:hover {
        padding: 0px 15px;
        font-weight: bold;
    }
}
//tabs
.post-body .tabs .tab-content .tab-pane.active, .tabs-comment .tab-content .tab-pane.active {
    border-left: 1px solid #aba7d5;
    border-right: 1px solid #aba7d5;
    border-bottom: 1px solid #aba7d5;
}
.post-body .tabs ul.nav-tabs li.tab, .tabs-comment ul.nav-tabs li.tab {
    border-bottom: 1px solid #aba7d5;
    &:hover {
        font-weight: bold;
        font-size: 15px;
    }
    &.active {
        border-top: 3px solid #aba7d5;
        border-left: 1px solid #aba7d5;
        border-right: 1px solid #aba7d5;        
        font-weight: bold;
        font-size: 15px;
    }
}
.post-body .tabs .tab-content .tab-pane.active a, .tabs-comment .tab-content .tab-pane.active a {
    border: none;
    font-weight: bold;
    transition-property: padding,border;
    transition-delay: 0s;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    &:hover {
        border: 2px dashed;
        padding: 2px 3px;
    }
}
//页码
.pagination .page-number.current {
    font-weight: bold;
    border-top-width: 2px;
}
.pagination .prev, .pagination .next, .pagination .page-number {
    border-top-color: rgb(111, 111, 111);
    &:hover {
        font-weight: bold;
        border-top-width: 2px;
    }
}
@media (max-width: 767px)
    //页码
    .pagination .page-number.current {
        font-weight: bold;
        border-bottom-width: 2px;
    }
    .pagination .prev, .pagination .next, .pagination .page-number {
        border-bottom-color: rgb(111, 111, 111);
        &:hover {
            font-weight: bold;
            border-bottom-width: 2px;
        }
    }
//小代码块
code {
    padding 1px 2px;
    margin 0px 2px;
    font-size: 0.7em
}
// 代码折叠功能添加
.hider_title{
    padding-left: 9px
    font-weight: bold;
    cursor: pointer;
}
.fold {
    padding-top: 9px;
    padding-left: 9px;
    padding-right: 9px;
    margin-bottom: 9px
}
.close:after{
    font-family: "ZCOOL KuaiLe";
    content: " ▼（由于折叠功能与“PJAX”功能有冲突，如果出现反复开折情况，请刷新页面）";
}
.open:after{
    font-family: "ZCOOL KuaiLe";
    content: " ▲（由于折叠功能与“PJAX”功能有冲突，如果出现反复开折情况，请刷新页面）";
}
